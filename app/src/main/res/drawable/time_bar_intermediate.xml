<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <corners
                android:radius="5dp"/>
            <gradient
                android:startColor="#80404040"
                android:endColor="#80404040"/>
        </shape>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners
                    android:radius="5dp"/>
                <gradient
                    android:startColor="@color/intermediate_theme"
                    android:endColor="@color/intermediate_theme"/>
            </shape>
        </clip>
    </item>

</layer-list>